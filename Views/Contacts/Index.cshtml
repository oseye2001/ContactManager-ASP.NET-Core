@model ContactManager.ViewModels.ContactsIndexVM

@{
    ViewData["Title"] = "Contacts";

    string ToggleSort(string field)
    {
        var cur = Model.Sort ?? "nom_asc";
        return field switch
        {
            "nom" => cur == "nom_asc" ? "nom_desc" : "nom_asc",
            "prenom" => cur == "prenom_asc" ? "prenom_desc" : "prenom_asc",
            "date" => cur == "date_asc" ? "date_desc" : "date_asc",
            _ => "nom_asc"
        };
    }
}

<div class="d-flex align-items-start justify-content-between mb-3">
    <div>
        <h1 class="h3 mb-1">Contacts</h1>
        <div class="text-muted">Recherchez, filtrez et gérez vos contacts.</div>
    </div>

    <div class="d-flex gap-2 flex-wrap">
        <a class="btn btn-outline-secondary" asp-controller="Categories" asp-action="Index">
            <i class="bi bi-tags me-1"></i> Catégories
        </a>
        <a class="btn btn-primary" asp-action="Create">
            <i class="bi bi-plus-circle me-1"></i> Ajouter un contact
        </a>
    </div>
</div>

<form method="get" class="card shadow-sm mb-3">
    <div class="card-body">
        <div class="row g-2 align-items-end">
            <div class="col-12 col-md-5">
                <label class="form-label fw-semibold">Recherche</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input class="form-control" name="search" value="@Model.Search"
                           placeholder="Nom, prénom, courriel, téléphone..." />
                </div>
            </div>

            <div class="col-12 col-md-4">
                <label class="form-label fw-semibold">Catégorie</label>
                <select class="form-select" name="categorieId" asp-items="Model.Categories">
                    <option value="">Toutes</option>
                </select>
            </div>

            <div class="col-6 col-md-2">
                <label class="form-label fw-semibold">Par page</label>
                <select class="form-select" name="pageSize">
                    <option value="5" selected="@(Model.PageSize == 5)">5</option>
                    <option value="10" selected="@(Model.PageSize == 10)">10</option>
                    <option value="20" selected="@(Model.PageSize == 20)">20</option>
                </select>
            </div>

            <div class="col-6 col-md-1 d-grid">
                <button type="submit" class="btn btn-dark">
                    <i class="bi bi-funnel me-1"></i> OK
                </button>
            </div>
        </div>

        <input type="hidden" name="sort" value="@Model.Sort" />
        <input type="hidden" name="page" value="1" />
    </div>
</form>

@if (Model.TotalCount == 0)
{
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="alert alert-info d-flex align-items-center mb-0" role="alert">
                <i class="bi bi-info-circle-fill me-2"></i>
                <div>
                    <div class="fw-semibold">Aucun contact trouvé.</div>
                    <div class="text-muted">
                        Ajoute ton premier contact, ou crée une catégorie si nécessaire.
                    </div>
                </div>
            </div>

            <div class="d-flex gap-2 mt-3 flex-wrap">
                <a class="btn btn-primary" asp-action="Create">
                    <i class="bi bi-plus-circle me-1"></i> Ajouter un contact
                </a>
                <a class="btn btn-outline-secondary" asp-controller="Categories" asp-action="Create">
                    <i class="bi bi-tags me-1"></i> Créer une catégorie
                </a>
            </div>
        </div>
    </div>
}
else
{
    <div class="card shadow-sm">
        <!-- ✅ IMPORTANT: plus de bg-white -->
        <div class="card-header d-flex align-items-center justify-content-between cm-table-head">
            <span class="fw-semibold">
                <i class="bi bi-person-lines-fill me-1"></i> Liste des contacts
            </span>

            <!-- Bonus: badge plus “pro” -->
            <span class="badge rounded-pill cm-badge">@Model.TotalCount</span>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <!-- ✅ IMPORTANT: cm-table + pas de thead table-light -->
                <table class="table table-hover align-middle mb-0 cm-table">
                    <thead>
                        <tr>
                            <th>
                                <a class="text-decoration-none"
                                   asp-action="Index"
                                   asp-route-search="@Model.Search"
                                   asp-route-categorieId="@Model.CategorieId"
                                   asp-route-page="1"
                                   asp-route-pageSize="@Model.PageSize"
                                   asp-route-sort="@ToggleSort("prenom")">
                                    Prénom <i class="bi bi-arrow-down-up ms-1"></i>
                                </a>
                            </th>
                            <th>
                                <a class="text-decoration-none"
                                   asp-action="Index"
                                   asp-route-search="@Model.Search"
                                   asp-route-categorieId="@Model.CategorieId"
                                   asp-route-page="1"
                                   asp-route-pageSize="@Model.PageSize"
                                   asp-route-sort="@ToggleSort("nom")">
                                    Nom <i class="bi bi-arrow-down-up ms-1"></i>
                                </a>
                            </th>
                            <th>Courriel</th>
                            <th>Téléphone</th>
                            <th>Catégorie</th>
                            <th>
                                <a class="text-decoration-none"
                                   asp-action="Index"
                                   asp-route-search="@Model.Search"
                                   asp-route-categorieId="@Model.CategorieId"
                                   asp-route-page="1"
                                   asp-route-pageSize="@Model.PageSize"
                                   asp-route-sort="@ToggleSort("date")">
                                    Date <i class="bi bi-arrow-down-up ms-1"></i>
                                </a>
                            </th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td class="fw-semibold">@item.Prenom</td>
                                <td class="fw-semibold">@item.Nom</td>
                                <td>@item.Courriel</td>
                                <td>@item.Telephone</td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(item.Categorie?.Nom))
                                    {
                                        <span class="badge rounded-pill cm-pill">@item.Categorie!.Nom</span>
                                    }
                                </td>
                                <td>@item.DateCreation.ToLocalTime().ToString("yyyy-MM-dd")</td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-sm btn-outline-primary"
                                           asp-action="Edit" asp-route-id="@item.ContactID" title="Modifier">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a class="btn btn-sm btn-outline-secondary"
                                           asp-action="Details" asp-route-id="@item.ContactID" title="Détails">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a class="btn btn-sm btn-outline-danger"
                                           asp-action="Delete" asp-route-id="@item.ContactID" title="Supprimer">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mt-3">
        <div class="text-muted small">
            @((Model.Page - 1) * Model.PageSize + 1) -
            @(Math.Min(Model.Page * Model.PageSize, Model.TotalCount))
            sur @Model.TotalCount
        </div>

        <nav>
            <ul class="pagination m-0">
                <li class="page-item @(Model.Page <= 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-search="@Model.Search"
                       asp-route-categorieId="@Model.CategorieId"
                       asp-route-sort="@Model.Sort"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-page="@(Model.Page - 1)">
                        Précédent
                    </a>
                </li>

                <li class="page-item disabled">
                    <span class="page-link">
                        Page @Model.Page / @Model.TotalPages
                    </span>
                </li>

                <li class="page-item @(Model.Page >= Model.TotalPages ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-search="@Model.Search"
                       asp-route-categorieId="@Model.CategorieId"
                       asp-route-sort="@Model.Sort"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-page="@(Model.Page + 1)">
                        Suivant
                    </a>
                </li>
            </ul>
        </nav>
    </div>
}
