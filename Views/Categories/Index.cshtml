@model IEnumerable<ContactManager.Models.Categorie>

@{
    ViewData["Title"] = "Catégories";
    var categories = Model?.ToList() ?? new List<ContactManager.Models.Categorie>();
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h1 class="h3 mb-1">Catégories</h1>
        <div class="text-muted">Gérez les catégories pour organiser vos contacts.</div>
    </div>

    <a class="btn btn-primary" asp-action="Create">
        <i class="bi bi-plus-circle me-1"></i> Créer une catégorie
    </a>
</div>

@if (TempData["Warning"] != null)
{
    <div class="alert alert-warning d-flex align-items-center" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <div>@TempData["Warning"]</div>
    </div>
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center cm-table-head">
        <span class="fw-semibold">
            <i class="bi bi-tags me-1"></i> Liste des catégories
        </span>
        <span class="badge rounded-pill cm-badge">@categories.Count</span>
    </div>

    <div class="card-body p-0">
        @if (!categories.Any())
        {
            <div class="p-4">
                <div class="alert alert-info m-0">
                    <div class="fw-semibold mb-1">Aucune catégorie pour le moment.</div>
                    <div class="text-muted">
                        Crée une catégorie (ex. <strong>Famille</strong>, <strong>Travail</strong>, <strong>Amis</strong>)
                        pour pouvoir ajouter des contacts.
                    </div>
                </div>

                <div class="d-flex gap-2 mt-3 flex-wrap">
                    <a class="btn btn-primary" asp-action="Create">
                        <i class="bi bi-plus-circle me-1"></i> Créer une catégorie
                    </a>
                    <a class="btn btn-outline-secondary" asp-controller="Contacts" asp-action="Index">
                        <i class="bi bi-people me-1"></i> Voir les contacts
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0 cm-table">
                    <thead>
                        <tr>
                            <th style="width:70%">Nom</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in categories)
                        {
                            <tr>
                                <td class="fw-semibold">@item.Nom</td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-sm btn-outline-primary"
                                           asp-action="Edit" asp-route-id="@item.CategorieID" title="Modifier">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>

                                        <a class="btn btn-sm btn-outline-secondary"
                                           asp-action="Details" asp-route-id="@item.CategorieID" title="Détails">
                                            <i class="bi bi-eye"></i>
                                        </a>

                                        <a class="btn btn-sm btn-outline-danger"
                                           asp-action="Delete" asp-route-id="@item.CategorieID" title="Supprimer">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<div class="mt-3 text-muted small">
    Astuce : crée au moins une catégorie avant d’ajouter un contact.
</div>
