@model ContactManager.Models.Categorie
@{
    ViewData["Title"] = "Créer une catégorie";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h1 class="h3 mb-1">Créer une catégorie</h1>
        <div class="text-muted">Ex: Famille, Travail, Amis…</div>
    </div>
    <a class="btn btn-outline-secondary" asp-action="Index">
        <i class="bi bi-arrow-left"></i> Retour
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="Nom" class="form-label fw-semibold">Nom</label>
                <input asp-for="Nom" class="form-control" placeholder="Ex: Famille" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>

            <button class="btn btn-primary" type="submit">
                <i class="bi bi-check2-circle me-1"></i> Enregistrer
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
